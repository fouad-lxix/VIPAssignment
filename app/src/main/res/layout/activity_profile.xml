                                                <ImageView
                                                    android:layout_marginTop="2dp"
                                                    android:layout_marginRight="1dp"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:src="@drawable/circle_grey"
                                                    />

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Not Available"
                                                    android:textSize="6sp"
                                                    android:textColor="#bebebe"/>
                                            </LinearLayout>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:gravity="center"
                                            android:layout_marginStart="20dp">

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="#edd065"
                                                android:textStyle="bold"
                                                android:textSize="5sp"
                                                android:text="200/session"/>

                                            <ImageView
                                                android:layout_width="15dp"
                                                android:layout_marginTop="4dp"
                                                android:layout_height="14dp"
                                                android:background="@drawable/heart"/>

                                        </LinearLayout>
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Reviews"
                        android:textStyle="bold"
                        android:layout_marginLeft="17dp"
                        android:layout_weight="1"
                        android:textColor="#157177"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:text="View All"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:textColor="#157177"
                        android:layout_marginRight="17dp"
                        />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="180dp"
                            android:layout_height="150dp"
                            android:backgroundTint="#51becb"
                            app:cardCornerRadius="20dp"
                            android:layout_marginEnd="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="John Cooper"
                                    android:textColor="#ddf7f6"
                                    android:textStyle="bold"
                                    />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center">
                                    <ImageButton
                                        android:layout_width="13dp"
                                        android:layout_height="13dp"
                                        android:background="@drawable/review_star"
                                        android:backgroundTint="#ffc60a"/>
                                    <ImageButton
                                        android:layout_width="13dp"
                                        android:layout_height="13dp"
                                        android:background="@drawable/review_star"
                                        android:backgroundTint="#ffc60a"/>
                                    <ImageButton
                                        android:layout_width="13dp"
                                        android:layout_height="13dp"
                                        android:background="@drawable/review_star"
                                        android:backgroundTint="#ffc60a"/>
                                    <ImageButton
                                        android:layout_width="13dp"
                                        android:layout_height="13dp"
                                        android:background="@drawable/review_star"
                                        android:backgroundTint="#ffc60a"/>
                                    <ImageButton
                                        android:layout_width="13dp"
                                        android:layout_height="13dp"
                                        android:background="@drawable/review_star"
                                        android:backgroundTint="#ffc60a"/>
                                </LinearLayout>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="9dp"
                                    android:text="John provided excellent Prototyping Techniques and insights. I highly recommend him!"/>

                            </LinearLayout>

