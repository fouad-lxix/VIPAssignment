<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#dcf7f6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navigation_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/profileheader">
            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/back_arrow_white"
                android:backgroundTint="#157177"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Profile"
                android:textSize="25dp"
                android:textColor="#157177"
                android:textStyle="bold"
                android:layout_marginStart="15dp"/>
            <TextView
                android:id="@+id/logoutbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textSize="15dp"
                android:textColor="#157177"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:gravity="end"/>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:elevation="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/black"
                android:id="@+id/coverphoto"
                tools:ignore="MissingConstraints"
                android:scaleType="centerCrop"/>
            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:layout_constraintEnd_toEndOf="@id/coverphoto"
                app:layout_constraintTop_toBottomOf="@id/coverphoto"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="-15dp"
                android:background="@drawable/edit_button"
                android:id="@+id/editcoverbtn"/>
            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintStart_toStartOf="@id/coverphoto"
                app:layout_constraintTop_toBottomOf="@id/coverphoto"
                android:layout_marginStart="40dp"
                android:layout_marginTop="-40dp"
                android:background="@android:color/transparent"
                app:cardCornerRadius="50dp"
                android:id="@+id/profilepichold">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profilepic"
                    android:background="@android:color/transparent"
                    android:id="@+id/profilepic"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    />
            </androidx.cardview.widget.CardView>
            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:layout_constraintTop_toBottomOf="@id/profilepichold"
                app:layout_constraintEnd_toEndOf="@id/profilepichold"
                android:background="@drawable/edit_button"
                android:layout_marginTop="-20dp"
                android:id="@+id/editprofilebtn"
                android:elevation="2dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/profilepichold"
                app:layout_constraintStart_toStartOf="@id/profilepichold"
                app:layout_constraintEnd_toEndOf="@id/profilepichold">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ali"
                    android:textColor="#157177"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:id="@+id/username"
                    />

                <TextView
                    android:id="@+id/usercity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Islamabad"
                    android:textColor="#7d8889"
                    android:textSize="15dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corner_chat"
            android:backgroundTint="#ffc60a"
            android:text="Booked Sessions"
            android:textColor="#157177"
            android:textStyle="bold" />

        <ScrollView
