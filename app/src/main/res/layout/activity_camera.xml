<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".CameraActivity">
    <LinearLayout app:layout_constraintTop_toTopOf="parent" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
        <androidx.cardview.widget.CardView android:id="@+id/cameratop" android:layout_width="match_parent" android:layout_height="110dp" android:backgroundTint="#def8f8"/>
        <androidx.cardview.widget.CardView android:id="@+id/cameramid" android:backgroundTint="#cccccc" android:layout_width="match_parent" android:layout_height="540dp">
            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content" android:src="@drawable/camera_top"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView android:id="@+id/camerabottom" android:layout_width="match_parent" android:layout_height="120dp" android:backgroundTint="#def8f8">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="5dp" android:layout_marginLeft="-20dp">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Slo-mo" android:textColor="@color/black" android:textStyle="bold" android:textSize="10sp" android:layout_marginStart="35dp" android:layout_weight="1"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Video" android:textColor="@color/black" android:textStyle="bold" android:textSize="10sp" android:layout_marginStart="30dp" android:layout_weight="1"/>
                <TextView android:layout_width="60dp" android:gravity="center" android:layout_height="20dp" android:background="@drawable/rounded_corner_chat" android:text="Photo" android:textSize="10sp" android:backgroundTint="#c1edee" android:textColor="#2f8b90" android:textStyle="bold" android:layout_marginStart="30dp" android:layout_weight="1"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Square" android:textColor="@color/black" android:textStyle="bold" android:textSize="10sp" android:layout_marginStart="30dp" android:layout_weight="1"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Portrait" android:textColor="@color/black" android:textStyle="bold" android:textSize="10sp" android:layout_marginStart="30dp" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal" android:layout_marginTop="45dp" android:layout_marginStart="55dp">
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/gallery_button" android:layout_gravity="start"/>
                <ImageView android:layout_width="90dp" android:layout_height="90dp" android:layout_marginBottom="5dp" android:layout_marginTop="-15dp" android:layout_marginStart="43dp" android:src="@drawable/shutter_button"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="38dp" android:src="@drawable/video_button"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>