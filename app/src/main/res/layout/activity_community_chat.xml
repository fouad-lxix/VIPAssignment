<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" app:layout_constraintHeight_default="wrap" android:background="#def8f8" tools:context=".CommunityChatActivity">
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="295dp" android:layout_marginTop="-15dp" android:backgroundTint="#50c2c9" app:cardCornerRadius="20dp" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="1.0" app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/homebanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:backgroundTint="#FFFFFF"
                    android:src="@drawable/back_arrow_white" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="220dp"
                    android:layout_marginEnd="15dp"
                    android:backgroundTint="#FFFFFF"
                    android:src="@drawable/phone" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="#FFFFFF"
                    android:src="@drawable/camera" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="John Cooper’s"
                android:textColor="#fdfefe"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Community"
                android:textColor="#fdfefe"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/person4" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" app:layout_constraintBottom_toTopOf="@id/typeBar" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_gravity="end" android:layout_marginBottom="10dp" android:layout_marginEnd="20dp">
            <TextView android:layout_width="310dp" android:layout_height="wrap_content" android:textAlignment="textStart" android:text="How was your experience with his mentorship? Satisfied??" android:textStyle="bold" android:gravity="start" android:padding="13dp" android:background="@drawable/rounded_corner_chat" android:backgroundTint="#a2e6df"/>
            <TextView android:layout_width="140dp" android:layout_marginTop="3dp" android:layout_height="wrap_content" android:text="10:30" android:textStyle="bold" android:textSize="11sp" android:textAlignment="textEnd" android:layout_marginRight="10dp" android:layout_gravity="end" android:textColor="#c3d3d7"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:orientation="horizontal">
            <ImageView android:layout_marginTop="-7dp" android:layout_width="80dp" android:layout_height="80dp" android:src="@drawable/green_person"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_gravity="start" android:layout_marginEnd="20dp">
                <TextView android:layout_width="90dp" android:layout_height="wrap_content" android:text="Worth it!!" android:textColor="#4e4e4e" android:textStyle="bold" android:gravity="center" android:layout_marginTop="10dp" android:background="@drawable/rounded_corner_chat" android:backgroundTint="#ffffff"/>
                <TextView android:layout_width="140dp" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="10:32" android:layout_marginStart="12dp" android:textStyle="bold" android:gravity="start" android:textSize="11sp" android:textColor="#c3d3d7"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <ImageView android:layout_marginTop="-14dp" android:layout_width="80dp" android:layout_height="80dp" android:src="@drawable/purple_person"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_gravity="start" android:layout_marginEnd="20dp" android:layout_marginBottom="20dp">
                <TextView android:layout_width="100dp" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="Impressive" android:textColor="#4e4e4e" android:textStyle="bold" android:gravity="center" android:background="@drawable/rounded_corner_chat" android:backgroundTint="#ffffff"/>
                <TextView android:layout_width="140dp" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="10:32" android:layout_marginStart="12dp" android:textStyle="bold" android:gravity="start" android:textSize="11sp" android:textColor="#c3d3d7"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <ImageView android:layout_marginTop="-5dp" android:layout_width="80dp" android:layout_height="80dp" android:src="@drawable/doctor"/>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_gravity="start" android:layout_marginEnd="20dp" android:layout_marginBottom="20dp">
                <TextView android:layout_width="230dp" android:layout_height="wrap_content" android:text="You’re missing out! Go take it!!!" android:textColor="#4e4e4e" android:textStyle="bold" android:layout_marginTop="10dp" android:gravity="center" android:background="@drawable/rounded_corner_chat" android:backgroundTint="#ffffff"/>
                <TextView android:layout_width="140dp" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="10:32" android:layout_marginStart="12dp" android:textStyle="bold" android:gravity="start" android:textSize="11sp" android:textColor="#c3d3d7"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <androidx.cardview.widget.CardView android:id="@+id/typeBar" android:backgroundTint="#50c2c9" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@id/navigation_bar" android:layout_width="match_parent" android:layout_marginBottom="10dp" android:layout_height="wrap_content" app:cardCornerRadius="20dp" android:layout_marginStart="10dp" android:layout_marginEnd="10dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="20dp" android:layout_marginBottom="50dp" android:layout_marginStart="9dp" android:layout_marginEnd="20dp">
            <ImageButton android:layout_width="20dp" android:layout_height="30dp" android:background="@drawable/attachment" android:backgroundTint="#c0ecee"/>
            <ImageButton android:layout_width="30dp" android:layout_height="30dp" android:layout_marginStart="2dp" android:background="@drawable/gallery" android:backgroundTint="#c0ecee"/>
            <EditText android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@android:color/transparent" android:hint="Type something ..." android:layout_weight="1" android:layout_marginStart="10dp" android:textColorHint="#afe6e8" android:inputType="text"/>
            <ImageButton android:layout_width="25dp" android:layout_height="25dp" android:background="@drawable/picture" android:backgroundTint="#c0ecee"/>
            <ImageButton android:layout_width="25dp" android:layout_height="25dp" android:background="@drawable/mic" android:backgroundTint="#c0ecee"/>
            <ImageButton android:layout_width="25dp" android:layout_height="25dp" android:layout_marginEnd="-4dp" android:background="@drawable/send" android:backgroundTint="#c0ecee"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout android:id="@+id/navigation_bar" android:layout_width="match_parent" android:layout_height="70dp" android:background="#157177" android:elevation="1dp" android:orientation="horizontal" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:gravity="center_vertical">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginEnd="20dp" android:layout_gravity="center_vertical">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_weight="1" android:gravity="center">
                <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@android:color/transparent" android:src="@drawable/custom_home_grey" android:id="@+id/homebtn" android:backgroundTint="#51a8a6"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Home" android:textColor="#51a8a6"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_weight="1" android:layout_marginTop="4dp" android:gravity="center">
                <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/custom_search" android:backgroundTint="#51a8a6" android:id="@+id/searchbtn"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Search" android:textColor="#51a8a6"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="20dp" android:layout_gravity="center_vertical">
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_weight="1" android:gravity="center">
                <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/custom_chat" android:backgroundTint="#51a8a6" android:id="@+id/chatbtn"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Chat" android:textColor="#51a8a6"/>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_weight="1" android:gravity="center">
                <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/custom_profile" android:backgroundTint="#51a8a6" android:id="@+id/profilebtn"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Profile" android:layout_marginTop="5dp" android:textColor="#51a8a6"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:elevation="2dp" app:layout_constraintBottom_toTopOf="@id/navigation_bar" app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent" android:src="@drawable/baseline_add_circle_24" android:backgroundTint="#157177" android:background="@drawable/baseline_circle_24_2" android:padding="0dp" android:layout_marginTop="0dp" android:layout_marginBottom="-40dp" android:id="@+id/addbtn"/>
</androidx.constraintlayout.widget.ConstraintLayout>