<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#CCCCCC"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="20dp"
    android:id="@+id/mentorcard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="0dp"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:layout_width="85dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:backgroundTint="@android:color/transparent"
                app:cardCornerRadius="50dp"
                android:layout_weight="2"
                >
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:id="@+id/mentorpic"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:backgroundTint="#f0f4f3"
                app:cardCornerRadius="10dp"
                android:layout_margin="8dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Cooper"
                            android:textStyle="bold"
                            android:textSize="8sp"
                            android:textColor="@color/black"
                            android:id="@+id/mentorname"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UX Designer @ Google"
                            android:textSize="5sp"
                            android:textColor="@color/black"
                            android:id="@+id/mentorcat"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <ImageView
                                android:id="@+id/mentorstatuscircle"
                                android:layout_marginTop="2dp"
                                android:layout_marginRight="1dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/circle_green"
                                />

                            <TextView
                                android:id="@+id/mentorstatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="6sp"
                                android:textColor="#3ead00"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginStart="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#edd065"
                            android:textStyle="bold"
                            android:textSize="5sp"
                            android:text="$1500/session"
                            android:id="@+id/mentorrate"/>

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_marginTop="4dp"
                            android:layout_height="14dp"
                            android:backgroundTint="#a70606"
                            android:background="@drawable/heart"
                            android:id="@+id/likebtn"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>